<?xml version="1.0" encoding="UTF-8"?>
<profiles
  xmlns:xi="http://www.w3.org/2001/XInclude">
  <profile node="gazebo" ns="/">
    <xi:include href="common/node.xml"
      xpointer="xpointer(/profile/*)"/>
    <services reply="ALLOW">
      <service>apply_joint_effort</service>
      <service>apply_link_wrench</service>
      <service>clear_joint_efforts</service>
      <service>clear_link_wrenches</service>
      <service>delete_entity</service>
      <service>get_model_list</service>
      <service>pause_physics</service>
      <service>reset_simulation</service>
      <service>reset_world</service>
      <service>spawn_entity</service>
      <service>unpause_physics</service>
    </services>
    <topics publish="ALLOW">
      <topic>/clock</topic>
      <topic>/performance_metrics</topic>
    </topics>
  </profile>
  <profile node="spawn_entity" ns="/">
    <xi:include href="common/node.xml"
      xpointer="xpointer(/profile/*)"/>
    <services request="ALLOW">
      <service>spawn_entity</service>
    </services>
  </profile>
</profiles>
